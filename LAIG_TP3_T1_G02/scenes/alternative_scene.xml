<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="15" z="50" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="Player1" near="0.1" far="500" angle="45">
            <from x="-30" y="20" z="0" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="Player2" near="0.1" far="500" angle="45">
            <from x="30" y="20" z="0" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="TopCamera" near="0.1" far="500" angle="45">
            <from x="0" y="20" z="20" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="FocusCamera" near="0.1" far="500" angle="45">
            <from x="0" y="30" z="0.1" />
            <to x="0" y="5" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
        <background r="0.8" g="0.8" b="0.8" a="1.0" />
    </globals>

    <lights>
        <omni id="boardLight" enabled="1">
            <location x="0" y="20" z="0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.75" g="0.75" b="0.75" a="1.0" />
            <specular r="0.75" g="0.75" b="0.75" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />  
        </omni>
        <omni id="Player1Light" enabled="1">
            <location x="-20" y="20" z="0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.35" g="0.3" b="0.3" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />  
        </omni>
        <omni id="Player2Light" enabled="1">
            <location x="20" y="20" z="0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.35" g="0.3" b="0.3" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />  
        </omni>
    </lights>

    <textures>
        <texture id="woodTexture" file="scenes/images/wood.jpg" />
        <texture id="wallTexture" file="scenes/images/wall_wood.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="demoMaterial2" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="demoMaterial3" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.4" g="0.4" b="0.4" a="1.0" />
        </material>

        <material id="floorMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.15" g="0.3" b="0.2" a="1.0" />
            <diffuse r="0.15" g="0.3" b="0.2" a="1.0" />
            <specular r="0.15" g="0.3" b="0.2" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x="-2" y="0" z="0" />
        </transformation>
    </transformations>

    <animations>
        <animation id="demoAnimation" >
            <keyframe instant="0">
                <translate x="0" y="-2" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="2.5">
                <translate x="0" y="-2" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="10">
                <translate x="0" y="0" z="5" />
                <rotate angle_x="0" angle_y="360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="15">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>

        <animation id="demoAnimation2" >
            <keyframe instant="0">
                <translate x="0" y="2" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="2.5">
                <translate x="0" y="2" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="10">
                <translate x="0" y="0" z="5" />
                <rotate angle_x="0" angle_y="-360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>

            <keyframe instant="15">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        
        <primitive id="demoSphere">
            <sphere radius="1" stacks="32" slices="32" />
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="1" top="1" height="3" slices="64" stacks="6" />
        </primitive>

         <primitive id="demoRectangle">
            <rectangle x1="-40" y1="-40" x2="40" y2="40" />
        </primitive>

        <primitive id="demoTorus">
            <torus inner="0.2" outer="2" slices="64" loops="64" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="alternative_table" />
                <componentref id="house_interior" />
            </children>
        </component>

        <component id="house_interior">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="house_floor" />
                <componentref id="house_wall" />
                <componentref id="house_lw" />
                <componentref id="house_rw" />
            </children>
        </component>

        <component id="house_floor">
            <transformation>
                <scale x="1.5" y="1" z="1"/>
                <translate x="0" y="-3" z="0"/>
                <rotate angle="180" axis="y"/>
                <rotate angle="-90" axis="x"/>
            </transformation>
            <materials>
                <material id="floorMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="house_wall">
            <transformation>
                <scale x="1.5" y="0.4" z="1"/>
                <translate x="0" y="30" z="-40"/>
                <rotate angle="180" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wallTexture" length_s="10" length_t="80"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
        
        <component id="house_lw">
            <transformation>
                <scale x="1.5" y="0.4" z="1"/>
                <translate x="-40" y="30" z="0"/>
                <rotate angle="90" axis="y"/>
                <rotate angle="180" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wallTexture" length_s="10" length_t="80"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="house_rw">
            <transformation>
                <scale x="1.5" y="0.4" z="1"/>
                <translate x="40" y="30" z="0"/>
                <rotate angle="-90" axis="y"/>
                <rotate angle="180" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="wallTexture" length_s="10" length_t="80"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="alternative_table">
            <transformation>
                <scale x="2" y="2" z="2"/>
                <translate x="0" y="2" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="alternative_table_top" />
                <componentref id="alternative_table_top_bottom" />
                <componentref id="alternative_table_legs" />
            </children>
        </component>

        <component id="alternative_table_top">
            <transformation>
                <translate x="0" y="0.201" z="0" />
                <scale x="4" y="0.1" z="4"/>
                <rotate angle="90" axis="x"/>
            </transformation>
            <materials>
                <material id="demoMaterial2" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="alternative_table_laterals" />
                <componentref id="alternative_table_top_underside" />
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="alternative_table_top_underside">
            <transformation>
                <translate x="0" y="0" z="6" />
            </transformation>
            <materials>
                <material id="demoMaterial2" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="alternative_table_laterals">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial2" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="alternative_table_lateral_outside" />
                <componentref id="alternative_table_lateral_inside" />
            </children>
        </component>

        <component id="alternative_table_lateral_outside">
            <transformation>
                <scale x="2.2" y="2.2" z="2"/>
            </transformation>
            <materials>
                <material id="demoMaterial2" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="alternative_table_lateral_inside">
            <transformation>
                <scale x="-1.8" y="1.8" z="2"/>
            </transformation>
            <materials>
                <material id="demoMaterial2" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="alternative_table_top_bottom">
            <transformation>
                <translate x="0" y="-0.201" z="0" />
                <scale x="8" y="0.1" z="8"/>
                <rotate angle="90" axis="x"/>
            </transformation>
            <materials>
                <material id="demoMaterial3" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="alternative_table_legs">
            <transformation>
                <translate x="0" y="-0.2" z="0" />
                <scale x="0.75" y="1.2" z="0.75" />
                <rotate angle="90" axis="x" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="woodTexture" length_s="1" length_t="1"/>
            <children>
                <componentref id="alternative_table_leg_lb" />
                <componentref id="alternative_table_leg_rb" />
                <componentref id="alternative_table_leg_lf" />
                <componentref id="alternative_table_leg_rf" />
            </children>
        </component>

        <component id="alternative_table_leg_lb">
            <transformation>
                <translate x="-4" y="-4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="alternative_table_leg_rb">
            <transformation>
                <translate x="4" y="-4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

         <component id="alternative_table_leg_lf">
            <transformation>
                <translate x="-4" y="4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

         <component id="alternative_table_leg_rf">
            <transformation>
                <translate x="4" y="4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>
       
    </components>
</lxs>