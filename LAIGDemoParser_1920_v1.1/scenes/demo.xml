<lxs>
    <scene root="demoRoot" axis_length="1"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="orthoCamera"  near="0.1" far="500" left="-5" right="5" top="5" bottom="-5" >
            <from x="0" y="0" z="10" />
            <to x="0" y="0" z="0" />
            <up x="0" y="1" z="0" /> <!-- opcional, default 0,1,0 -->
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <rotate axis="z" angle="-45" />
            <scale x="2" y="1" z="2" />
        </transformation>
        
        <transformation id="demoTransform2">
            <translate x="5" y="1" z="3" />
            <scale x="5" y="1" z="5" />
        </transformation>
    </transformations>

    <primitives>

        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoSphere">
            <sphere radius="1" stacks="32" slices="32" />
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="1" top="2" height="2" slices="6" stacks="6" />
        </primitive>

        <primitive id="demoTorus">
            <torus inner="0.333" outer="1" slices="64" loops="64" />
        </primitive>
        
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <transformationref id="demoTransform" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
                <material id="demoMaterial2" />
                <material id="demoMaterial3" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="demoRoot2" />
                <componentref id="demoRoot3" />
            </children>
        </component>
        
        <component id="demoRoot2">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="1" y="2" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial4" />
            </materials>
            <texture id="demoTexture2"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="demoRoot3">
            <transformation>
                <translate x="0" y="1" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial5" />
            </materials>
            <texture id="demoTexture2"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
    </components>
</lxs>